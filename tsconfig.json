{
    "compilerOptions": {
        "target": "ESNext",
        "module": "preserve",
        "moduleResolution": "bundler",
        "types": [
            "vite/client"
        ],
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noImplicitOverride": true,
        "noEmit": true,
        "strict": true,
    },
    "include": [
        "src",
        "src/ToDo.ts"
    ]
}